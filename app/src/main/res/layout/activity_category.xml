<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:id="@+id/category_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose a Category"
        android:textSize="24sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- History Button -->
    <Button
        android:id="@+id/history_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="History"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3498DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/category_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Science Button -->
    <Button
        android:id="@+id/science_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Science"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3498DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/history_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Math Button -->
    <Button
        android:id="@+id/math_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Math"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3498DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/science_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Geography Button -->
    <Button
        android:id="@+id/geography_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Geography"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3498DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/math_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>